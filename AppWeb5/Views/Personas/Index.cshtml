@model List<AppWeb5.Models.ViewModels.ListTablaViewModel>
@{
    ViewBag.Title = "Personas";
}

<h2>@ViewBag.title</h2>

<div class="row" style="text-align: right; padding: 10px;">
    <a href="~/Personas/Nuevo" class="btn btn-primary">Nuevo</a>


</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Ap_Paterno</th>
                <th>Ap_Materno</th>
                <th>Edad</th>
                <th>Activo</th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.id</td>
                    <td>@oElemento.nombre</td>
                    <td>@oElemento.Ap_Pat </td>
                    <td>@oElemento.Ap_Mat</td>
                    <td>@oElemento.Edad</td>
                    <td>@oElemento.Activo</td>
                    <td>
                        <a class="btn btn-default" href="~/Personas/Editar/@oElemento.id">Editar</a>
                        <a class="btn btn-danger" href="~/Personas/Eliminar/@oElemento.id">Eliminar</a>
                    </td>
                </tr>
                
            }

        </table>
    </div>

</div>


